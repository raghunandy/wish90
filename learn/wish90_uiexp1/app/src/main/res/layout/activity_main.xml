<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".28"
        >
        tools:context="com.example.toolbar.MainActivity" >

       <!-- <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_awesome_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="128dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:background="?attr/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ActionBarThemeOverlay">

        </android.support.v7.widget.Toolbar>-->

        <ImageView
            android:id="@+id/contact_entry_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#fff9fc"
            android:scaleType="centerCrop" />

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />-->

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/cake_icon"
            android:layout_weight="1"
            android:text="Events"
            android:textSize="20dp"
            android:id="@+id/button4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/home_icon"
            android:layout_weight="1"
            android:id="@+id/button5"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button6"
            android:layout_toStartOf="@+id/button6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/view_icon"
            android:layout_weight="1"
            android:id="@+id/button6"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".22">
        <ImageView
            android:id="@+id/contact_entry_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#fffbfd"
            android:scaleType="centerCrop"
            android:contentDescription=""
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22">
        <ImageView
            android:id="@+id/contact_entry_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#f9fdff"
            android:scaleType="centerCrop"
             />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".28">
        <ImageView
            android:id="@+id/contact_entry_image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#fcfff6"
            android:scaleType="centerCrop"
             />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/gift_icon"
            android:text="Gifts"
            android:id="@+id/button"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/help_icon"
            android:text="Help"
            android:id="@+id/button3"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search_icon"
            android:text="Search"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>
