<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="leona.gygafun.wish90.presentation" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_background_transperant"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.activity.UserHomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.activity.UserMomentListActivity"
            android:label="Wish90" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.UserMomentDetailsActivity"
            android:label="@string/activity_title_user_details" >
        </activity>
        <activity android:windowSoftInputMode="adjustPan"  android:name=".view.activity.NewMomentActivity"
            android:label="Add new moment">
        </activity>
        <activity android:name=".view.activity.ManageWish"
            android:label="@string/activity_title_manage_wish" >
        </activity>
        <activity android:name=".view.activity.ConveyWishActivity"
            android:label="@string/activity_title_convey_wish" >
        </activity>
    </application>

</manifest>
